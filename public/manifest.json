{
  "manifest_version": 3,
  "name": "CommentWhiz",
  "description": "CommentWhiz Extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "ext-icon.png",
    "default_title": "CommentWhiz"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000/scrape https://api.openai.com"
  }
}
